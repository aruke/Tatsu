<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.AppTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.AppTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.AppTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="Widget.AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <!-- Inputs -->
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.App.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/Widget.AppTheme.TextInputEditText</item>
    </style>

    <style name="Widget.AppTheme.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox" />

    <style name="FullScreenDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="FeedbackSentimentRadioStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TimerDigitStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">56sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/source_code_pro</item>
        <item name="fontFamily">@font/source_code_pro</item>
    </style>

    <style name="TimerLabelStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/source_code_pro</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/source_code_pro</item>
    </style>

    <style name="GuideStyle" />

    <style name="GuideStyle.Container">
        <item name="android:background">?colorSurface</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/appintro_statusbar_height</item>
    </style>

    <style name="GuideStyle.Heading">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
    </style>

    <style name="GuideStyle.Image">
        <item name="android:layout_weight">5</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_enableMergePathsForKitKatAndAbove">true</item>
    </style>

    <style name="GuideStyle.Description">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
    </style>

</resources>