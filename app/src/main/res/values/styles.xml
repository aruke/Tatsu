<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Launch">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TimerDigitStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_margin">16dp</item>
        <item name="android:autoText">true</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">22sp</item>
    </style>

    <style name="TimerTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>